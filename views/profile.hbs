<main>
  <section id="user">
    <div class="user-info">
      <div class="user-logo">
        <img
          src="https://ps.w.org/user-avatar-reloaded/assets/icon-256x256.png?rev=2540745"
        />
      </div>
      <h1 class="user-email">{{user.email}}</h1>
      <h2 class="created-course-count">Total Created Course:
        {{totalCreatedCourses}}</h2>
      <h2 class="sign-course-count">Total Sign up Course:
        {{totalSignedUpCourses}}</h2>
    </div>
  </section>

  <section class="profile-course">
    <div class="created-course">
      <h2 class="section-title">Created Courses</h2>

      {{#if createdCourses.length}}
        {{#each createdCourses}}
          <div class="info">
            <h2 class="title">{{this.title}}</h2>
            <h4 class="genre">Type: {{this.type}}</h4>
            <div class="learn-more">
              <a href="/courses/details/{{this._id}}">Learn More...</a>
            </div>
          </div>
        {{/each}}
      {{else}}
        <h2 class="no-course-in-profile">You haven't created a course yet...</h2>
      {{/if}}
    </div>

    <div class="sign-course">
      <h2 class="section-title">Signed Up Courses</h2>

      {{#if signedUpCourses.length}}
        {{#each signedUpCourses}}
          <div class="info">
            <h2 class="title">{{this.title}}</h2>
            <h4 class="genre">Type: {{this.type}}</h4>
            <h4 class="certificate">Certificate: {{this.certificate}}</h4>
            <div class="learn-more">
              <a href="/courses/details/{{this._id}}">Learn More...</a>
            </div>
          </div>
        {{/each}}
      {{else}}
        <h2 class="no-course-in-profile">You haven't signed up for any courses
          yet...</h2>
      {{/if}}
    </div>
  </section>
</main>